
<h1 class="mt-4"> Les Workshops</h1>

  <%@workshop.each do |workshop|%>
  <div class="card my-3 ">
    <div class="row">
      <div class="col-md-4 ">
        <p>image</p>
      </div>

      <div class="col-md-8">
        <div class="card-block px-1">
          <div class="perso">

            <div style= 'height: 20vh;'>
              <h4 class="card-title py-1 my-1 "><%=workshop.title%></h4>          
              <p class="card-text my-2"><%=workshop.description%></p>
            </div>

            <div class ='card-footer w-100'>
              <div class="d-flex justify-content-between">
                <p class="text-muted"><%=workshop.date%> de <%=workshop.schedule%></p>
                <p class="text-muted"><%=workshop.seat%> places</p>
              </div>

              <div class="d-flex justify-content-between">
                <p class="text-muted"><%=workshop.price%> euros</p>
                <%=  link_to "S'INSCRIRE",monworkshops_path, :class =>'btn btn-success float-right pr-10'%>
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
  <%end%>

