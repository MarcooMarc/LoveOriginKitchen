<h1 class="mt-2"> Les Workshops</h1>

  <%@workshop.each do |workshop|%>
  <div class="card my-2">
    <div class="row">
      <div class="col-md-4">
        <%= cl_image_tag workshop.photo, class:'card-img'%>
      </div>

      <div class="col-md-8">
        <div class="card-block">
          <div class="d-flex flex-column justify-content-between">

            <div>
              <h4 class="card-title mt-3 px-2 "><%=workshop.title%></h4>          
              <p class="card-text my-3 px-2"><%=workshop.description%></p>
            </div>

            <div class ='card-footer'>
              <div class="d-flex justify-content-between">
                <p class="text-muted"><%=workshop.date%></p>
                <p class="text-muted"><%=workshop.schedule%></p>
                <p class="text-muted btn btn-outline-info"><%=workshop.seat%> places</p>
              </div>
              <div class="d-flex justify-content-between">
                <p class="text-muted"><%=workshop.price%> euros</p>
                <%=  link_to "S'INSCRIRE",{:controller => "bookings", :action => "new", :workshop_id => workshop.id,}, :class =>'btn btn-success float-right pr-10'%>
              </div>
            </div>

          </div>

        </div>
      </div>
    </div>
  </div>
  <%end%>

